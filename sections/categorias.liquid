
<script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#e61980",
                        "background-light": "#f8f6f7",
                        "background-dark": "#211119",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"]
                    },
                    borderRadius: { "DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px" },
                },
            },
        }
</script>
<style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        body {
            font-family: 'Manrope', sans-serif;
        }
</style>

<section class="bg-background-light">
    <div class="max-w-[1440px] mx-auto px-4 lg:px-20 py-16">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold tracking-tight">Categor√≠as Premium</h2>
            <a class="text-primary font-bold text-sm flex items-center gap-1 hover:underline" href="{{ section.settings.enlace_todo }}">
            Ver todo <span class="material-symbols-outlined text-sm">arrow_forward</span>
            </a>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
            <!-- Category Item -->
            {% for block in section.blocks %}
                <a href="{{ block.settings.enlace }}" aria-label="se dirige al detalle del producto">
                    <div class="group cursor-pointer flex-col">
                        <div class="aspect-square rounded-2xl overflow-hidden relative mb-4">
                            <img alt="{{ block.settings.titulo }}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" data-alt="Foundation and concealer makeup products closeup" src="{{ block.settings.image | img_url: 'master' }}"/>
                            <div class="absolute inset-0 bg-black/10 group-hover:bg-black/20 transition-colors"></div>
                        </div>
                        <h3 class="text-lg font-bold">{{ block.settings.titulo }}</h3>
                        <p class="text-[#886375] dark:text-white/60 text-sm">{{ block.settings.subtitulo }}</p>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</section>


{% schema %}
  {
    "settings": [
        {
            "type": "url",
            "id": "enlace_todo",
            "label": "Aqui agregas o editas el enlace del boton ver todo"
        }
    ],
    "blocks": [
      {
        "name": "categorias_seccion",
        "type": "text",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Aqui agregas o editas la imagen"
            },
            {
                "type": "text",
                "id": "titulo",
                "label": "Aqui agregas o editas el titulo"
            },
            {
                "type": "text",
                "id": "subtitulo",
                "label": "Aqui agregas o editas el subtitulo"
            },
            {
                "type": "url",
                "id": "enlace",
                "label": "Aqui agregas o editas el enlace de la tarjeta"
            }
        ]
      }
    ],
    "presets": [
      {
        "name": "categorias_seccion"

      }
    ]
  }
{% endschema %}

