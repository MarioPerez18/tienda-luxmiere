  <style>
    .navbar {
      position: fixed;
      top: 0;
      width: 100%;
      background-color: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid #E9ECEF;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }



    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-container .desktop-icons {
        display: flex;
        align-items: center;
        gap: 1.5rem;
      }

    .nav-logo {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .nav-logo a{
        text-decoration: none;
    }

    .logo-icon {
        background-color: var(--orange);
        padding: 10px;
        border-radius: 8px;
        box-shadow: var(--shadow);
    }
    .logo-icon svg{
        color: var(--white);
        margin: auto;
        display: block;
    }

    .logo-icon i {
        color: var(--white);
        font-size: 24px;
    }

    .logo-text {
        font-size: 20px;
        font-weight: 700;
        color: var(--navy-blue);
    }

    .nav-menu {
        display: flex;
        gap: 32px;
    }

    .nav-menu .dropdown-mobile{
      padding: 20px;
    }

    .desktop-icons .icon-btn {
        position: relative;
        padding: 0;
        background: none;
        border: none;
      }

      .desktop-icons .icon-btn .cart-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        font-size: 0.75rem;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

    

      .icon-btn svg {
        width: 20px;
        height: 20px;
      }

    .nav-link {
        color: var(--text-gray);
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s ;
    }

  
    .hamburger {
        display: none;
        flex-direction: column;
        cursor: pointer;
    }

    .bar {
        width: 25px;
        height: 3px;
        background-color: #0A2540;
        margin: 3px 0;
        transition: var(--transition);
    }

    @media (max-width: 768px) {
      .nav-menu {
            position: fixed;
            left: -100%;
            top: 62px;
            flex-direction: column;
            background-color: #ffffff;
            width: 100%;
            text-align: center;
            transition: 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px 0;
        }

        .nav-menu .dropdown-mobile{
          position: static;
          margin: 0px auto;
          padding: 10px;
        }

        .nav-menu .btn-dropdown{
          justify-content: center;
        }

        .nav-menu.active {
            left: 0;
        }

        .hamburger {
            display: flex;
        }

        .hamburger.active .bar:nth-child(2) {
            opacity: 0;
        }

        .hamburger.active .bar:nth-child(1) {
            transform: translateY(8px) rotate(45deg);
        }

        .hamburger.active .bar:nth-child(3) {
            transform: translateY(-8px) rotate(-45deg);
        }
      
    }

    [x-cloak] {
      display: none !important;
    }
</style>

