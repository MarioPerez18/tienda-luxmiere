{% if paginacion.pages > 0 %}
    <nav role="navegacion" class="flex justify-center my-8">
        {% if paginacion.previous %}
              <a href="{{ paginacion.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-primary hover:text-white transition-all px-8 py-3 rounded-sm font-medium">
                {{ paginacion.previous.title }}
              </a>
        {% endif %}

        {% for part  in paginacion.parts %}
            {% if part.is_link %}
                <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-primary hover:text-white transition-all px-8 py-3 rounded-sm font-medium">
                    {{ part.title }}
                </a>
                {% else %}
                    <span class="border border-gray-600 text-white bg-primary px-8 py-3 rounded-sm font-medium">{{ part.title }}</span>
            {% endif %}
           
        {% endfor %}

        {% if paginacion.next %}
            <a href="{{ paginacion.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-primary hover:text-white transition-all px-8 py-3 rounded-sm font-medium">
                {{ paginacion.next.title }}
            </a>
            
        {% endif %}
    </nav>
{% endif %}